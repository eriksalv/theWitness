<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<HBox alignment="CENTER" stylesheets="/style/MainStyle.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="theWitness.controllers.MainController">
   <children>
      <AnchorPane fx:id="main" prefHeight="647.0" prefWidth="500.0">
         <children>
            <VBox alignment="CENTER" layoutX="15.0" layoutY="16.0" prefHeight="616.0" prefWidth="470.0">
               <children>
                  <Label text="THE WITNESS" textFill="WHITE" underline="true">
                     <font>
                        <Font name="Constantia" size="60.0" />
                     </font>
                  </Label>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="25.0">
                     <children>
                        <Button fx:id="continueButton" mnemonicParsing="false" onAction="#handleContinue" prefHeight="25.0" prefWidth="125.0" text="Continue" visible="false" />
                        <Button mnemonicParsing="false" onAction="#handleNewGame" prefHeight="25.0" prefWidth="125.0" text="New Game" />
                        <Button mnemonicParsing="false" onAction="#openLoadView" prefHeight="25.0" prefWidth="125.0" text="Load Game" />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</HBox>
