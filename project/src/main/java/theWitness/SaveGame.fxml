<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane fx:id="saveGame" prefHeight="647.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="theWitness.SaveGameController">
   <children>
      <Pane fx:id="saves" prefHeight="600.0" prefWidth="480.0">
         <children>
            <Label fx:id="header" layoutX="94.0" layoutY="31.0" style="-fx-font-size: 20;" text="Select a file to save your game to" />
            <Label layoutX="67.0" layoutY="72.0" text="Filename:" />
            <TextField fx:id="fileName" layoutX="67.0" layoutY="89.0" promptText="save_1" text="save_1" />
            <Button fx:id="createAndSave" layoutX="255.0" layoutY="90.0" mnemonicParsing="false" onMouseClicked="#handleCreateAndSave" text="Create and Save" />
            <Button fx:id="load" layoutX="255.0" layoutY="90.0" mnemonicParsing="false" onMouseClicked="#handleLoad" prefHeight="32.0" prefWidth="112.0" text="Load" visible="false" />
            <DialogPane fx:id="saveMessage" contentText="File was saved" layoutX="181.0" layoutY="3.0" prefHeight="78.0" prefWidth="120.0" style="-fx-border-color: black;" visible="false">
               <header>
                  <Label fx:id="closeSaveMessage" alignment="TOP_RIGHT" onMouseClicked="#handleCloseSaveMessage" text="X " />
               </header>
            </DialogPane>
            <Label fx:id="returnToGameView" layoutX="452.0" layoutY="14.0" onMouseClicked="#handleOpenGameView" text="❌" />
         </children>
      </Pane>
   </children>
</AnchorPane>
